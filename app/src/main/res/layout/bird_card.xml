<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/cardview_lateralMargin"
    android:layout_marginRight="@dimen/cardview_lateralMargin"
    android:layout_marginBottom="@dimen/cardview_marginBottom"
    android:clickable="true"
    android:elevation="@dimen/cardview_marginElevation"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Add image view, We will not set any data here.-->

        <!--Text view for showing the language name-->

        <!--Text View for showing the exp-->

        <ImageView
            android:id="@+id/bird_image"
            android:layout_width="250dp"
            android:layout_height="108dp"
            android:layout_marginTop="@dimen/imageview_marginTop"
            android:layout_marginBottom="@dimen/imageview_marginBottom"
            android:alpha="1.0"
            android:gravity="center_vertical|center_horizontal|top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:text="ciao"
             />


        <TextView
            android:id="@+id/bird_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/textdrink_marginTop"
            android:text="Titolo"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/bird_image"
            app:layout_constraintTop_toBottomOf="@id/bird_image"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/bird_button"
            android:layout_width="@dimen/gotodetail_width"
            android:layout_height="@dimen/gotodetail_height"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/gotodetail_marginRight"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/details"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/bird_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@id/bird_habitat"
            app:layout_constraintTop_toBottomOf="@id/bird_distribution"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/bird_habitat"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/drink_card_cl"
            app:layout_constraintLeft_toRightOf="@id/bird_image"
            app:layout_constraintStart_toStartOf="@id/bird_name"
            app:layout_constraintTop_toBottomOf="@id/bird_name"
            tools:text="33 cl" />

        <TextView
            android:id="@+id/bird_distribution"
            android:layout_width="@dimen/shortdescription_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shortdescription_marginTop"

            android:layout_marginRight="@dimen/shortdescription_marginRight"
            android:textAppearance="@style/drink_card_beerDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bird_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@id/bird_habitat"
            app:layout_constraintTop_toBottomOf="@id/bird_habitat"

            app:layout_constraintVertical_bias="0.067"
            tools:text="Descrizione" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>